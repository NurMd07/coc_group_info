<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/images/favicon.png" type="image/png" />
    <title>Admin Panel</title>
    <link rel="stylesheet" href="/css/modify.css" />
  </head>
  <body>
    <div class="container">
      <div class="header">
        <h1>Modify Group Info</h1>
      </div>
      <div class="availableMethods">
        <button class="addPlayer">Add Player</button>
        <button class="updatePlayer">Update Player</button>
        <button class="deletePlayer">Delete Player</button>
      </div>

      <form class="addPlayerForm hide" action="/add" method="POST">
        <input
          type="text"
          class="wpName"
          name="wpName"
          placeholder="WhatsApp Name"
          required
        />
        <input
          type="text"
          class="wpNumber"
          name="wpNumber"
          placeholder="WhatsApp Number"
          required
        />
        <input
          type="text"
          name="cocId"
          class="cocId"
          placeholder="Clash of Clans ID"
          required
        />
        <input
          type="text"
          name="adminAccessValue"
          class="adminAccessValue"
          placeholder="Admin Access Value"
          required
        />
        <button class="addPlayer" type="submit">Add Player</button>
      </form>

      <form class="updatePlayerForm hide" action="/update" method="POST">
        <input
          type="text"
          class="wpName"
          name="wpName"
          placeholder="WhatsApp Name"
        />
        <input
          type="text"
          class="wpNumber"
          name="wpNumber"
          placeholder="WhatsApp Number"
        />
        <input
          type="text"
          class="cocId"
          name="cocId"
          placeholder="Clash of Clans ID"
        />
        <input
          type="text"
          class="adminAccessValue"
          name="adminAccessValue"
          placeholder="Admin Access Value"
          required
        />
        <button class="updatePlayer" type="submit">Update Player</button>
      </form>

      <form class="deletePlayerForm hide" action="/delete" method="POST">
        <input
          type="text"
          class="cocId"
          name="cocId"
          placeholder="Clash of Clans ID to delete"
          required
        />
        <input
          type="text"
          class="adminAccessValue"
          name="adminAccessValue"
          placeholder="Admin Access Value"
          required
        />
        <button class="deletePlayer" type="submit">Delete Player</button>
      </form>

      <% if (error) { %>
      <p class="error"><%= error %></p>
      <% } %>
    </div>
    <button class="homeBtn" style="--i: #f4c430; --j: #25d366">
      <span class="icon"
        ><svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          fill="currentColor"
          class="bi bi-house-door"
          viewBox="0 0 16 16"
        >
          <path
            d="M8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4.5a.5.5 0 0 0 .5-.5v-4h2v4a.5.5 0 0 0 .5.5H14a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293zM2.5 14V7.707l5.5-5.5 5.5 5.5V14H10v-4a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5v4z"
          /></svg
      ></span>
    </button>
    <script src="/js/modify.js"></script>
  </body>
</html>
